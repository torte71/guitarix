#!/usr/bin/env python
# encoding: utf-8

def configure(conf):
    pass

def build(bld):
    lv2_base = 'gx_digital_delay_st'

    bld.lv2(
        lv2_base = lv2_base,
        source   = ['gx_digital_delay_st.cpp'],
        includes = ['../faust','./', '../DSP'],
        use = ['LV2CORE','FFTW3'],
        )
    bld.lv2_gui(
        lv2_base = lv2_base,
        source   = ' gx_digital_delay_st_ui.cpp',
        includes = ['../xputty/header','../xputty/header/widgets','../xputty/resources','../xputty/lv2_plugin'],
        use = ['xcairo','X11', 'CAIRO','LV2CORE'],
        )
